{
  "manifest_version": 3,
  "name": "LazyTimesheet",
  "description": "Generate weekly ServiceNow timesheets from Outlook calendar automatically.",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://lazy-timesheet-backend.onrender.com/*",
    "https://*.service-now.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.service-now.com/*"],
      "js": ["content.js"]
    }
  ],

  "icons": {
  "16": "icon-16.png",
  "48": "icon-48.png",
  "128": "icon-128.png"
}
}
